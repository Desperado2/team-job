<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.desperado.teamjob.dao.UserDao">

    <insert id="addUser" parameterType="com.desperado.teamjob.domain.User">
        INSERT INTO `user`(
                id,name,password,email,phone,birth_type,birthday,department,position,head_url
        ) VALUES (#{id},#{name},#{password},#{email},#{phone},#{birthType},#{birthday},#{department},#{position},#{headUrl})
    </insert>

    <update id="update" parameterType="com.desperado.teamjob.domain.User">
        update `user`set
                name = #{name},phone=#{phone},birth_type=#{birthType},birthday=#{birthday},department=#{department},
                position =#{position},head_url=#{headUrl}
       where id=#{id}
    </update>

    <update id="updatePassword" >
        update `user`set
                password = #{password}
       where id=#{id}
    </update>

    <select id="selectAllUser"  resultType="com.desperado.teamjob.dto.UserDto">
        select * from user;
    </select>

    <select id="selectUserById"  resultType="com.desperado.teamjob.dto.UserDto">
        select id,name,email,phone,birthday,department,position,head_url from user where id=#{id};
    </select>

</mapper>